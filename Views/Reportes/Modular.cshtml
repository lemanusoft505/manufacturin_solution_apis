@{
    Layout = globales.LayPadre;
    List<cls_dbo_planta> data_planta = TempData["data_plantas"] as List<cls_dbo_planta>;



<style>
    .centrado {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
</style>
    <div class="container h-100">
        <h1 class="display-4">Seleccione Planta</h1>

        <div class="d-flex justify-content-center h-100">
            
            <div class="user_card">
                <div class="d-flex justify-content-center form_container">
                    @using (Html.BeginForm("Modular_Linea", "Reportes", FormMethod.Post))
                    {
                        foreach (cls_dbo_planta item in data_planta)
                        {
                            <div class="jumbotron" >
                                <div class="container">
                                    <div class="col-sm" >
                                        <button type="submit" value="@item.id_planta" name="nPlanta" class="btn login_btn">
                                            <img class="img-fluid" src="~/Content/media/64x64/home.png" />
                                            <p class="lead">@item.descripcion</p>
                                            <hr class="my-4">
                                        </button>                                        
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
}