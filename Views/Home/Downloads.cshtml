@{
    Layout = globales.LayPadre;


<style>
    .centrado {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
</style>

    <div class="container h-100">
        <div class="d-flex justify-content-center h-100">
            <div class="user_card">               
                <div class="d-flex justify-content-center form_container">
                    @using (Html.BeginForm("Descargar", "Home", FormMethod.Post))
                    {
                        <div class="jumbotron">
                            <h1 class="display-4">Descargas</h1>
                            <p class="lead">Bienvenido al sitio oficial de descargas de Sistemas de ROCEDES</p>
                            <hr class="my-4">
                            <div class="container">
                                <div class="row">
                                    <div class="col-sm">
                                        <button type="submit" value="ms-rocedes2025.zip" name="sArchivo" class="btn login_btn">
                                            Aplicación Windows
                                            <img class="img-fluid" src="~/Content/media/128x128/computer.png" />
                                        </button>
                                    </div>
                                    <div class="col-sm">
                                    </div>
                                    <div class="col-sm">
                                        <button type="submit" value="msrocedes.apk" name="sArchivo" class="btn login_btn">
                                            Aplicación Android
                                            <img class="img-fluid" src="~/Content/media/128x128/tablet.png" />
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>                    
                    }                    
                </div>

                <div class="mt-4">
                    <div class="d-flex justify-content-center links">
                        Versión @globales.versionApp
                    </div>
                    <div class="d-flex justify-content-center links">
                        <a href="http://www.rocedes.com.ni/">Visita nuestro sitio web oficial</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}